<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/Profileinfo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_profile"
                        app:civ_border_color="@color/Sky"
                        app:civ_border_width="2dp" />

                    <RelativeLayout
                        android:id="@+id/uploadphoto"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="0dp"
                            android:layout_marginBottom="0dp"
                            android:src="@drawable/bgcamera" />

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="7dp"
                            android:layout_marginBottom="7dp"
                            android:background="@drawable/ic_ar_camera" />
                    </RelativeLayout>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="กรุณากรอกชื่อและนามสกลจริง\nเพื่อใช้ยืนยันการรับรางวัล"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <RadioGroup
                    android:id="@+id/rg_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="90dp">

                    <RadioButton
                        android:id="@+id/rb_male"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/Sky"
                        android:text="ชาย"
                        android:textSize="20dp"
                        android:textColor="@color/white"/>

                    <RadioButton
                        android:id="@+id/rb_female"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/Sky"
                        android:text="หญิง"
                        android:textSize="20dp"
                        android:textColor="@color/white"/>

                </RadioGroup>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:weightSum="10">

                <EditText
                    android:id="@+id/edtname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/frametext"
                    android:drawableLeft="@drawable/ic_user"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:hint="ชื่อ - สกุล"
                    android:textColorHint="@color/Rmutt"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/Rmutt"/>

            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <EditText
                    android:id="@+id/birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/frametext"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_birthday"
                    android:drawableLeft="@drawable/ic_birthday"
                    android:drawablePadding="15dp"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="วันเกิด"
                    android:textColorHint="@color/Rmutt"
                    android:padding="10dp"
                    android:textColor="@color/Rmutt"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <EditText
                    android:id="@+id/edtphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/frametext"
                    android:digits="0123456789"
                    android:drawableStart="@drawable/ic_phone"
                    android:drawableLeft="@drawable/ic_phone"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:editable="false"
                    android:focusable="false"
                    android:inputType="phone"
                    android:text="0000000000"
                    android:maxLength="10"
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:textColor="@color/Rmutt"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <EditText
                    android:id="@+id/edtemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/frametext"
                    android:drawableStart="@drawable/ic_mail"
                    android:drawableLeft="@drawable/ic_mail"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:hint="อีเมล"
                    android:textColorHint="@color/Rmutt"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:textColor="@color/Rmutt"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <EditText
                    android:id="@+id/edtpw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/frametext"
                    android:drawableStart="@drawable/ic_key"
                    android:drawableLeft="@drawable/ic_key"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:hint="รหัสธุรกรรม"
                    android:textColorHint="@color/Rmutt"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:textColor="@color/Rmutt"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/btnconprofile"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/btnlogin"
                    android:text="ยืนยันข้อมูลถูกต้อง"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>