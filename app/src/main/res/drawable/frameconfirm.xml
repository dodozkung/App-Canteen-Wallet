<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/Rmutt"/>

        </shape>
    </item>

    <item
        android:left="3dp"
        android:right="3dp"
        android:top="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_bg"/>
            <stroke
                android:width="3dp"
                android:color="@color/Rmutt"/>
        </shape>
    </item>
</layer-list>